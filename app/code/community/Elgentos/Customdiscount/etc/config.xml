    	    </checkout_cart_update_items_after>
	    </events-->
	</frontend>
	<global>
        <template>
            <email>
                <offermail module="Customdiscount">
                    <label>Customdiscount notification email</label>
                    <file>customdiscount_offermail.html</file>
                    <type>html</type>
                </offermail>
                <requestmail module="Customdiscount">
                    <label>Customdiscount request email</label>
                    <file>customdiscount_requestmail.html</file>
                    <type>html</type>
                </requestmail>
            </email>
        </template>
        <models>
            <customdiscount>
                <class>Elgentos_Customdiscount_Model</class>
                <resourceModel>customdiscount_mysql4</resourceModel>
            </customdiscount>
             <customdiscount_mysql4>
                <class>Elgentos_Customdiscount_Model_Mysql4</class>
                <entities>
                    <discounts>
                        <table>customdiscount_discounts</table>
                    </discounts>
                </entities>
            </customdiscount_mysql4>
        </models>
		<resources>
			<customdiscount_setup>
				<setup>
					<module>Elgentos_Customdiscount</module>
					<class>Elgentos_Customdiscount_Model_Mysql4_Setup</class>
				</setup>
			</customdiscount_setup>
		</resources>
       <blocks>
            <customdiscount>
                <class>Elgentos_Customdiscount_Block</class>
            </customdiscount>
        </blocks>
		<helpers>
			<customdiscount>
				<class>Elgentos_Customdiscount_Helper</class>
			</customdiscount>
		</helpers>
	</global>
    <default>
        <customdiscount>
            <general>
                <disabled>0</disabled>
                <uselimit>1</uselimit>
            </general>
        </customdiscount>
    </default>
</config>
