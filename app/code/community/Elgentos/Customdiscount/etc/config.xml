<?xml version="1.0"?>
<config>
	<modules>
		<Elgentos_Customdiscount>
			<version>0.1.0</version>
		</Elgentos_Customdiscount>
	</modules>
    <admin>
        <routers>
            <customdiscount>
                <use>admin</use>
                <args>
                    <module>Elgentos_Customdiscount</module>
                    <frontName>customdiscount</frontName>
                </args>
            </customdiscount>
        </routers>
    </admin>
	<adminhtml>
		<translate>
			<modules>
				<Elgentos_Customdiscount>
					<files>
						<default>Elgentos_Customdiscount.csv</default>
					</files>
				</Elgentos_Customdiscount>
			</modules>
		</translate>
		<layout>
			<updates>
				<customdiscount>
					<file>customdiscount.xml</file>
				</customdiscount>
			</updates>
		</layout>
        <menu>

            <promo>
                <children>
                    <customdiscount module="customdiscount">
                        <title>Custom discounts</title>
                        <sort_order>71</sort_order>
                        <action>customdiscount/adminhtml_index</action>
                    </customdiscount>
                </children>
            </promo>
        </menu>
	</adminhtml>
	<frontend>
        <routers>
            <customdiscount>
                <use>standard</use>
                <args>
                    <module>Elgentos_Customdiscount</module>
                    <frontName>discount</frontName>
                </args>
            </customdiscount>
        </routers>
